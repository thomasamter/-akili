# Security Headers for AKILI
# Deploy on Netlify, Vercel, or Cloudflare Pages

/*
  # Prevent clickjacking
  X-Frame-Options: DENY

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Enable XSS filter
  X-XSS-Protection: 1; mode=block

  # Referrer policy
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions policy (disable unnecessary features)
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()

  # Content Security Policy
  # Note: 'unsafe-inline' for styles is required by Framer Motion. For scripts, we use strict-dynamic with nonce in production.
  Content-Security-Policy: default-src 'self'; script-src 'self' https://www.googletagmanager.com https://pagead2.googlesyndication.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://newsapi.org https://firestore.googleapis.com https://*.firebaseio.com https://identitytoolkit.googleapis.com https://securetoken.googleapis.com wss://*.firebaseio.com; frame-ancestors 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests

  # HSTS - Forces HTTPS connections
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
